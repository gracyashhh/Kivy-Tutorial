WidgetsExample:

<WidgetsExample@GridLayout>:
    cols:3
    ToggleButton:
        text:"OFF"
        size_hint:None,1
        width:"100dp"
        on_state: root.on_toggle_button_state(self)
    Button:
        text:"count"
        on_press:root.on_button_click()
        disabled: not root.flag
    Label:
        text:root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        # color takes both rgba(without-see below) as well as color names(with) quotes
        color: 1,.5,1,1
    Switch:
        on_active:root.on_switch_active(self)
        size_hint:None,1
        width:"100dp"
    Slider:
        min:0
        max:100
        # value is for setting default position value of the slider
        value:0
        on_value:root.on_slider_value(self)
        orientation: "vertical"
    Label:
        text:root.slider_value_txt


<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:


<ScrollViewExample@ScrollView>:

    StackLayoutExample:
        # width, hieght - for horizontal and vertical scrolling
        size_hint: 1,None
        # for fixed height (extra) usually
        # height: 4000
        # for required height of the app - responsive
        height: self.minimum_height
        # width: 1000


